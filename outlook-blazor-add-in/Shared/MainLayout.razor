@inherits LayoutComponentBase

<div class="main">
	<header class="d-flex align-items-center justify-content-center">
		<img src="/images/AnalyteLogo.png" alt="AnalyteLogo" style="width: 200px; height: auto;" />

		<h1>
			Analyte Email Counter
		</h1>
	</header>

	<NavMenu/>

	<div class="content">
		<div class="container">
			@Body
		</div>
	</div>
</div>

<footer class="d-flex align-items-center justify-content-center">
	<div class="row">
		@TrademarkMessage1
	</div>
	<div class="row">
		@TrademarkMessage2
	</div>
	<div class="row">
		Powered by: @System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription
	</div>	
</footer>


@code {
	public string TrademarkMessage1 { get; set; } = "Copyright © " + @DateTime.Now.Year + " Waldo Nieman.";
	public string TrademarkMessage2 { get; set; } = "All rights reserved.";
}
